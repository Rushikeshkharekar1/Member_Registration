@{
    var genderCounts = ViewBag.GenderCounts;
}

<h2>Overall Gender Distribution</h2>

<div class="card">
    <div class="card-body">
        <h4>Gender Distribution</h4>
        <canvas id="genderChart" width="300" height="150"></canvas> <!-- Smaller canvas size -->
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    var ctx = document.getElementById('genderChart').getContext('2d');
    var genderChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Male', 'Female', 'Other'],
            datasets: [{
                label: '# of Members',
                data: [@genderCounts.Male, @genderCounts.Female, @genderCounts.Other],
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 206, 86, 0.2)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
