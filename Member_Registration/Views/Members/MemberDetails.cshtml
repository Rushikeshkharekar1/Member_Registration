@model Member_Registration.Models.ClubMember
@{
    var genderCounts = ViewBag.GenderCounts;
}

<h2>Member Details</h2>

<div class="card">
    <div class="card-header">
        <h3>@Model.MemberName</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Member Name</dt>
            <dd class="col-sm-9">@Model.MemberName</dd>

            <dt class="col-sm-3">Society</dt>
            <dd class="col-sm-9">@Model.Society?.SocietyName</dd>

            <dt class="col-sm-3">Hobbies</dt>
            <dd class="col-sm-9">
                @if (Model.ClubMemberHobbies != null && Model.ClubMemberHobbies.Any())
                {
                    <ul>
                        @foreach (var hobby in Model.ClubMemberHobbies)
                        {
                            <li>@hobby.Hobby.HobbyName</li>
                        }
                    </ul>
                }
                else
                {
                    <span>No Hobbies</span>
                }
            </dd>

            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9">
                @(Model.Gender == 0 ? "Male" : Model.Gender == 1 ? "Female" : "Other")
            </dd>

            <dt class="col-sm-3">Remarks</dt>
            <dd class="col-sm-9">@Model.Remark</dd>

            <dt class="col-sm-3">Is Active</dt>
            <dd class="col-sm-9">
                @(Model.IsActive.HasValue ? (Model.IsActive.Value ? "Yes" : "No") : "N/A")
            </dd>
        </dl>

        <a asp-action="ShowMembers" class="btn btn-primary">Back to List</a>
        <a asp-action="DownloadPdf" asp-route-id="@Model.Id" class="btn btn-info">Download as PDF</a>

        <h4>Gender Distribution</h4>
        <canvas id="genderChart" width="400" height="200"></canvas>
    </div>
</div>

<script>
    var ctx = document.getElementById('genderChart').getContext('2d');
    var genderChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Male', 'Female', 'Other'],
            datasets: [{
                label: '# of Members',
                data: [@genderCounts.Male, @genderCounts.Female, @genderCounts.Other],
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 206, 86, 0.2)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
