@model Member_Registration.Models.EditMemberViewModel

<h2>Edit Member</h2>

<form asp-action="EditMember" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="MemberName" class="form-label"></label>
        <input asp-for="MemberName" class="form-control" />
        <span asp-validation-for="MemberName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SocietyId" class="form-label"></label>
        <select asp-for="SocietyId" class="form-select">
            <option value="">Select Society</option>
            @foreach (var society in Model.Societies)
            {
                <option value="@society.Id" selected="@(society.Id == Model.SocietyId ? "selected" : null)">
                    @society.SocietyName
                </option>
            }
        </select>
        <span asp-validation-for="SocietyId" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label>Gender</label>
        <div>
            <input type="radio" asp-for="Gender" value="0" /> Male
            <input type="radio" asp-for="Gender" value="1" /> Female
            <input type="radio" asp-for="Gender" value="2" /> Others
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MembershipCategory" class="form-label">Membership Category</label>
        <select asp-for="MembershipCategory" class="form-select" required>
            <option value="">Select Category</option>
            <option value="1">A</option>
            <option value="2">B</option>
            <option value="3">C</option>
            <option value="4">D</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Remark" class="form-label"></label>
        <textarea asp-for="Remark" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Remark" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Hobbies</label>
        <select asp-for="SelectedHobbies" multiple class="form-control select2" required>
            @foreach (var hobby in Model.Hobbies)
            {
                <option value="@hobby.Id">@hobby.HobbyName</option>
            }
        </select>
        <span asp-validation-for="SelectedHobbies" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IsActive" class="form-label"></label>
        <select asp-for="IsActive" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ShowMembers" class="btn btn-secondary">Cancel</a>
</form>
<script>
    $(document).ready(function () {
        $('.select2').select2();
    });
</script>